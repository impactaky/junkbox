FROM --platform=${BUILDPLATFORM} ubuntu:22.04
ARG TARGETPLATFORM
ARG TARGETARCH
ARG TARGETOS
ARG TARGETVARIANT
ARG BUILDPLATFORM
ARG BUILDARCH
ARG BUILDOS
ARG BUILDVARIANT
RUN echo ${TARGETPLATFORM}
RUN echo ${TARGETARCH}
RUN echo ${TARGETOS}
RUN echo ${TARGETVARIANT}
RUN echo ${BUILDPLATFORM}
RUN echo ${BUILDARCH}
RUN echo ${BUILDOS}
RUN echo ${BUILDVARIANT}

